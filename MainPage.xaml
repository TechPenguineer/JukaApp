<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JukaApp.MainPage">
			 
    <ScrollView>
        <VerticalStackLayout 
            Spacing="25" 
            Padding="30,0" 
            VerticalOptions="Start">

            <Label 
                Text="Welcome to JukaApp v0.0.1"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center">

                <Label.Shadow>
                    <Shadow
                    Radius="10"
                    Opacity="1"
                    Brush="#00e0bb"
                    Offset="-10, 10"
                     />
                </Label.Shadow>
            </Label>

            <Editor x:Name="codeeditor"
                Placeholder="Enter your code here"
                HeightRequest="250"
                 />

            <Button 
                x:Name="RunJukaBtn"
                Text="Run Juka Code"
                SemanticProperties.Hint="Run Juka Code"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center"
                CornerRadius="5">
                <Button.Shadow>
                    <Shadow
                    Radius="10"
                    Opacity="1"
                    Brush="#00e0bb"
                    Offset="-10, 10"
                     />
                </Button.Shadow>
            </Button>
            <Label x:Name="outputText"
                FontSize="16"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
 
</ContentPage>
